<!doctype html>
<html>
<head>
    <title>Health Is Wealth</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="css/app.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.7.1/slick.css" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.7.1/slick-theme.css" />
     <script src="https://unpkg.com/scrollreveal@4.0.0-beta.6"></script>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/recipes" >Search Recipes</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->

        <div class="col-sm-6">
          <h2>Recipes</h3>
            <table class="table table-striped table-dark">
              <thead>
                <tr>
                  <th scope="col">Image</th>
                  <th scope="col">Recipe Name</th>
                  <th scope="col">Calories</th>
                  <th scope="col">Ingredients</th>
                  <th scope="col">Meal type</th>
                  <th scope="col">Cuisine</th>
                  <th scope="col">Shop</th>
                  <th scope="col">Nutrition</th>
                  <th scope="col">Email</th>
                  <th scope="col">Delete</th>
                </tr>
              </thead>
              <tbody>
          <% for(var i=0; i<messages.length; i++) {%>
            
          <tr>
            <td><img src=<%= messages[i].image %>></td>
            <th scope="row"><%= messages[i].label %></th>
            <td><%= messages[i].calories.split(".")[0] %></td>
            <td><%= messages[i].ingredients %></td>
            <td><%= messages[i].meal %></td>
            <td><%= messages[i].cuisine %></td>
            <td><i class ="fa fa-shopping-cart"></i></td>
            <td><i class ="fa fa-apple"></i></td>
            <td><i class ="fa fa-envelope"></i></td>
            <td><i class ="fa fa-ban"></i></td> 
            <td hidden><%= messages[i]._id %></td>
	  </tr>
          <% } %>
          
        </tbody>
      </table>
          
        <% if (user.local.email) { %>
        </div>
        <% } %> 

</div>


<script type="text/javascript" src="/js/profile.js"></script>
    <!--.menu-cart-->
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
